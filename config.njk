<h1 class="page-title">CONFIG</h1>

<style>

.config-section {
  margin: 2rem 0 0 0;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  flex-wrap: wrap;
  & > h2 {
    margin: 0;
  }
}

.config-buttons {
  margin: 2rem 0;
  display: grid;
  grid-template-columns: repeat(3, minmax(150px, 1fr));
  gap: 1.5rem;
}

@media (max-width: 768px) {
  .config-buttons {
    grid-template-columns: repeat(2, minmax(150px, 1fr));
  }
}

.config-button {
  cursor: pointer;
  transition: all 0.2s ease-in-out;
  &.full {
    grid-column: 1 / -1;
  }
}
</style>


<script type="module" src="/@/equipConfigButtons.mjs"></script>

<div class="config-section">
  <h2>THEMES</h2>
  <div class="config-buttons">
    <button class="config-button" data-config="colors-fire">FIRE</button>
    <button class="config-button" data-config="colors-venom">VENOM</button>
    <button class="config-button" data-config="colors-zero">ZERO</button>
    <button class="config-button" data-config="colors-void">VOID</button>
    <button class="config-button" data-config="colors-moon">MOON</button>
    <button class="config-button" data-config="colors-phantom">PHANTOM</button>
    <button class="config-button full" data-config="colors-random">RANDOM</button>
  </div>
</div>

<div class="config-section">
  <h2>TYPOGRAPHY</h2>

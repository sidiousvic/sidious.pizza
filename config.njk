<h1 class="page-title">CONFIG</h1>

<style>
* {
  transition: all 0.5s ease-in-out;
}

.config-section {
  margin: 2rem 0 0 0;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  flex-wrap: wrap;
  & > h2 {
    margin: 0;
  }
}

.config-buttons {
  margin: 2rem 0;
  display: grid;
  grid-template-columns: repeat(3, minmax(150px, 1fr));
  gap: 1.5rem;
}

@media (max-width: 768px) {
  .config-buttons {
    grid-template-columns: repeat(2, minmax(150px, 1fr));
  }
}

.config-section button {
  cursor: pointer;
  &.full {
    grid-column: 1 / -1;
  }
}
</style>


<script type="module" src="/@/programs/switchSelectedConfig.mjs"></script>
<script type="module" src="/@/programs/enableAutoRandomConfig.mjs"></script>

<div class="config-section">
  <h2>THEMES</h2>
  <div class="config-buttons">
    <button class="config-select" data-config="colors-fire">FIRE</button>
    <button class="config-select" data-config="colors-venom">VENOM</button>
    <button class="config-select" data-config="colors-zero">ZERO</button>
    <button class="config-select" data-config="colors-void">VOID</button>
    <button class="config-select" data-config="colors-moon">MOON</button>
    <button class="config-select" data-config="colors-phantom">PHANTOM</button>
    <button class="config-auto-random full" data-config="colors-random">"ANY COLOR YOU LIKE"</button>
  </div>
</div>

<div class="config-section">
  <h2>TYPOGRAPHY</h2>
  <div class="config-buttons">
    <button class="config-select" data-config="typography-nilheim">NILHEIM</button>
    <button class="config-select" data-config="typography-doomed">DOOMED</button>
    <button class="config-select" data-config="typography-virgil">VIRGIL</button>
    <button class="config-select" data-config="typography-dexter">DEXTER</button>
    <button class="config-select" data-config="typography-sinister">SINISTER</button>
    <button class="config-select" data-config="typography-sidious">SIDIOUS</button>
    <button class="config-auto-random full" data-config="typography-random">WHATEVER, MAN</button>
  </div>
</div>


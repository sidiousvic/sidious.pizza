<link preload rel="stylesheet" href="css/page-info.css">

<a href="#" class="page-info-button">
  <img src="/@/page-info.gif" />
</a>

<div class="page-info-overlay">
  <div class="page-info">
    <h1 class="page-info-title">
      <span class="page-info-icon">
        <img src="/@/page-info.gif" />
      </span>
      "{{ page.data.title }}"
    </h1>
    <p class="page-info-body">
      {{ page.data.info | safe }}
    </p>
  </div>
</div>

<script>
  const pageInfoButton = document.querySelector(".page-info-button");
  const pageInfoOverlay = document.querySelector(".page-info-overlay");
  pageInfoOverlay.addEventListener("click", (e) => {
    pageInfoOverlay.style.display = "none";
  })
 pageInfoButton.addEventListener("click", (e) => {
    pageInfoOverlay.style.display = "flex";
  })
</script>




    <div id="curtain" style="position:fixed;opacity:1;top:0;left:0;width:100vw;height:100%;background-color:#111;z-index:999;display:flex;align-items:center;justify-content:center;pointer-events:none;transition:opacity 0.7s ease-in-out;display:flex;align-items:center;justify-content:center;">
      <p class="pulse ascii">Loading...</p>
    </div>

    <main id="main" class="{{ bodyClass }}">
      {{ content | safe }}
    </main>

    <footer id="footer"><p>® 2023 <a href="https://github.com/sidiousvic" style="color: var(--darksteel); font-family: var(--font-family-secondary)">"@sidiousvic"</a> All Rights Reserved</p></footer>

{% if page.data.info %} 
  {% include "templates/page-info.njk" %}
{% endif %}
    
<script>
document.addEventListener('DOMContentLoaded', () => {
	if (/iPhone|iPad|iPod|Android/i.test(navigator.userAgent)) {
		const navbarLinks = document.querySelector('.navbar-links');	
		navbarLinks.style.display = 'none';
	}
});
</script>

    <script type="module" src="/@/programs/makeMainFillUpScreen.mjs"></script>
    <script type="module" src="/@/programs/liftCurtainOnLoad.mjs"></script>
    <script type="module" src="/@/programs/getColorsFromStorage.mjs"></script>
    <script type="module" src="/@/programs/getTypographyFromStorage.mjs"></script>
  </body>
</html>

<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or site.title }}</title>
    <meta name="description" content="{{ description or site.description }}">
    <link preload rel="stylesheet" href="/styles.css">
    <link rel="alternate" href="/feed.xml" type="application/atom+xml" title="{{ site.title }}">
    <link rel="alternate" href="/feed.json" type="application/json" title="{{ site.title }}">
    <link rel="icon" type="image/x-icon" href="/@/enemyR.png">
  </head>
  <body>
    <nav id="navbar" class="navbar">
      <a href="/" class="navbar-home">
        {{ site.title }}
      </a>

      <ul class="navbar-links">
      {%- for entry in search.pages("menu.visible=true", "menu.order") %}
        <li>
          <a href="{{ entry.data.url }}"{% if entry.data.url == url %} aria-current="page"{% endif %}>
            {% if entry.data.url == url %} <span class="current-page-indicator-bullet">⦿</span> {% endif %}
            {{ entry.data.menu.title or entry.data.title }}
          </a>
        </li>
      {%- endfor %}
      </ul>

    </nav>

    <main id="main" class="{{ bodyClass }}">
      {{ content | safe }}
    </main>

    <footer id="footer"><p>® 2023 <a href="https://github.com/sidiousvic" style="color: var(--darksteel); font-family: var(--font-family-delight)">"@sidiousvic"</a> All Rights Reserved</p></footer>

    <!-- Current page: {{ url }} -->
  </body>
</html>

---
layout: layouts/home.njk
---

<link preload rel="stylesheet" href="/css/post-list.css">
<link preload rel="stylesheet" href="/css/search.css">
<h1 class="page-title">ARCHIVE</h1>

{% set postslist = results %}
{% include "templates/postslist.njk" %}

<hr>

<nav class="post-navigation">
  <ul>
    {%- if pagination.previous %}
    <li>
      <a href="{{ pagination.previous }}" rel="prev">← Previous</a>
    </li>
    {% endif %}

    <li>
      Page {{ pagination.page }}
    </li>

    {%- if pagination.next %}
    <li>
      <a href="{{ pagination.next }}" rel="next">Next →</a>
    </li>
    {% endif %}
  </ul>
</nav>

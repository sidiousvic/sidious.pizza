    <style>
      body {
        background-color: #000;
        background-image: radial-gradient(#00ff00 .5px, #0000 .5px), radial-gradient(#0f0 .5px, #000 .5px);
        background-position: 0 0, 20px 20px;
        background-size: 40px 40px;
        animation: background-diagonal 1s linear infinite;
        position: relative;
      }

      #scanlines-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 11; /* Higher than menu (z-index: 10) */
      }

      /* Exempt post content from scan lines */
      .post-content {
        position: relative;
        z-index: 6;
      }

      .post-content::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
          repeating-linear-gradient(
            0deg,
            rgba(0, 0, 0, 0.35),
            rgba(0, 0, 0, 0.35) 1px,
            transparent 1px,
            transparent 3px
          );
        pointer-events: none;
        z-index: 0;
        animation: flicker 0.15s infinite;
      }

      .post-content::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
          radial-gradient(
            circle at center,
            rgba(0, 255, 0, 0.15) 0%,
            rgba(0, 255, 0, 0.1) 30%,
            transparent 70%
          );
        pointer-events: none;
        z-index: 1;
        animation: glow-pulse 2s infinite;
      }

      .post-title,
      .post-meta,
      .post-tags,
      .post-image {
        position: relative;
        z-index: 2;
      }

      #scanlines-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
          repeating-linear-gradient(
            0deg,
            rgba(0, 0, 0, 0.35),
            rgba(0, 0, 0, 0.35) 1px,
            transparent 1px,
            transparent 3px
          ),
          linear-gradient(to right, #000 0%, transparent 5%, transparent 95%, #000 100%),
          linear-gradient(to bottom, #000 0%, transparent 5%, transparent 95%, #000 100%);
        animation: flicker 0.15s infinite;
      }

      #scanlines-container::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
          radial-gradient(
            circle at center,
            rgba(0, 255, 0, 0.15) 0%,
            rgba(0, 255, 0, 0.1) 30%,
            transparent 70%
          ),
          repeating-linear-gradient(
            0deg,
            rgba(0, 0, 0, 0.12) 0px,
            rgba(0, 0, 0, 0.12) 0.5px,
            transparent 0.5px,
            transparent 2px
          );
        animation: glow-pulse 2s infinite;
      }

      @keyframes flicker {
        0% { opacity: 0.97; }
        5% { opacity: 0.95; }
        10% { opacity: 0.98; }
        15% { opacity: 0.96; }
        20% { opacity: 0.99; }
        25% { opacity: 0.94; }
        30% { opacity: 0.98; }
        35% { opacity: 0.95; }
        40% { opacity: 0.97; }
        45% { opacity: 0.96; }
        50% { opacity: 0.99; }
        55% { opacity: 0.95; }
        60% { opacity: 0.98; }
        65% { opacity: 0.96; }
        70% { opacity: 0.97; }
        75% { opacity: 0.95; }
        80% { opacity: 0.98; }
        85% { opacity: 0.96; }
        90% { opacity: 0.99; }
        95% { opacity: 0.95; }
        100% { opacity: 0.97; }
      }

      @keyframes glow-pulse {
        0% { opacity: 0.5; }
        50% { opacity: 0.8; }
        100% { opacity: 0.5; }
      }

      .close-menu {
        position: relative;
        background: rgba(0, 34, 0, 0.98);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 
          0 0 0 1px rgba(0, 255, 0, 0.3),
          0 4px 0 0 rgba(0, 255, 0, 0.15),
          0 8px 0 0 rgba(0, 255, 0, 0.1),
          inset 0 2px 4px rgba(0, 255, 0, 0.15),
          inset 0 -2px 4px rgba(0, 0, 0, 0.3);
        color: #0f0;
        font-family: 'Mondwest', serif;
        cursor: pointer;
        z-index: 2;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .close-menu::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
          45deg,
          rgba(0, 34, 0, 0.99) 0%,
          rgba(0, 34, 0, 0.98) 25%,
          rgba(0, 34, 0, 0.99) 50%,
          rgba(0, 34, 0, 0.98) 75%,
          rgba(0, 34, 0, 0.99) 100%
        );
        pointer-events: none;
        animation: burn-in 20s infinite;
        border-radius: 12px;
        z-index: -1;
      }

      .close-menu::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: repeating-linear-gradient(
          0deg,
          rgba(0, 0, 0, 0.3) 0px,
          rgba(0, 0, 0, 0.3) 1px,
          transparent 1px,
          transparent 2px
        );
        pointer-events: none;
        border-radius: 12px;
        z-index: -1;
      }

      .close-menu:hover {
        background: rgba(0, 34, 0, 0.99);
      }
    </style>
  </head>

